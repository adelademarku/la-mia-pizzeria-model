@{
    //ViewData["Title"] = "Home Page";
    Layout = null;
}


<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="style.css" rel="stylesheet" />
</head>

<body>

    <!-- impostazione header -->

    <header>

        <nav class="navbar sticky-top  bg-dark">
            <div class="container-fluid ">
                <span class="navbar-brand text-white ms-5 ">DoIta07</span>

                <span>
                    <a class="navbar-text text-white" href="Layout1">347 149 4498</a>
                    <a>
                        Contact me
                    </a>
                </span>
            </div>
        </nav>
    </header>
    <!-- impostazione main -->

    @model List<Pizza>

@if (Model.Count == 0)
{
    <h3>Non ci sono Post da Visualizzare!</h3>
}
else
{

    <main>

        <!-- primo container main -->
        <div>

            <div class="container-fluid ">
                <div class="row main row ">
                    <div class="col-12 col-md-12 col-xl-12 text-dark ">
                        <div class="text-center">
                            <img src="https://img.freepik.com/premium-vector/pizza-logo-design_9845-319.jpg?w=2000" class="rounded-circle mt-3" width="300"
                                 height="300" alt="img profilo">
                        </div>
                        <div>
                            <h4 class="text-center mb-0 p-4 "> Pizzeria DoIta07 </h4>

                        </div>
                    </div>
                </div>

            </div>

        </div>

        <!-- impostazione secondo contenitore main -->

        <h1 class="text-center mt-4 mb-4 p-3  bg-dark text-white"> Le nostre Pizze </h1>

        <div class="container mt-3 ">

            <div class="row row-cols-1 row-cols-md-3 g-4 mt-4 justify-content-evenly">


                <!--Primo card-->
                @foreach(Pizza pizza in Model){
                <div class="card border-0" style="width: 18rem;">
                    <img src="@pizza.Image" class="card-img-top" alt="Margherita Pizza">
                    <div class="card-body  ">
                        <h5 class="card-title">@pizza.Title</h5>
                        <p class="card-text">@pizza.Description</p>
                        <p>@pizza.Prezzo</p>
                                <p class="btn btn-primary" href="@Url.Action("PizzeIndex", "Pizze", new { id = @pizza.Id } )" role="button">Dettagli</p>
                    </div>
                </div>
                }

               

    </main>
    }
        <!--footer-->
        <footer class="text-center bg-dark m-0 p-0 g-0 ">

            <div class="contrainer ">
                <div class="row g-0">
                    <div class="col text-muted">

                        <p>Copyright © Your Website 2021</p>





                    </div>
                </div>
            </div>
        </footer>



        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                crossorigin="anonymous"></script>
        <script type="text/javascript" src="script.js"></script>



</body>

</html>

